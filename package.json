{
  "name": "react-native-football-formation",
  "version": "1.0.9",
  "description": "A highly customizable React Native component for displaying football/soccer team formations with player positions and match statistics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "formation-demo.png"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/assets/images && cp -r src/assets/images/* dist/assets/images/",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/ --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "football",
    "soccer",
    "formation",
    "lineup",
    "sports",
    "match",
    "team",
    "tactical",
    "field",
    "pitch",
    "football-formation",
    "soccer-formation",
    "team-lineup",
    "football-field",
    "soccer-lineup",
    "match-lineup",
    "football-tactics",
    "soccer-tactics",
    "player-position",
    "starting-eleven",
    "4-3-3",
    "tactical-formation",
    "sports-ui",
    "football-component",
    "soccer-component",
    "react-native-component",
    "typescript"
  ],
  "author": "Arbab Rafiq",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.74.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "typescript": "^5.7.0",
    "react": "^19.2.0",
    "react-native": "^0.83.1",
    "@react-native/typescript-config": "^0.76.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.0",
    "prettier": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arbab-io/react-native-football-formation"
  },
  "bugs": {
    "url": "https://github.com/arbab-io/react-native-football-formation/issues"
  },
  "homepage": "https://github.com/arbab-io/react-native-football-formation#readme"
}
